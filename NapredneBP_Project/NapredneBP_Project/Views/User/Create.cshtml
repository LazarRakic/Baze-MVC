@model NapredneBP_Project.Models.User
@{
    <form method="post" asp-controller="User" asp-action="Create">
        <div class="border p-3 mt-4">
            <div class="row pb-2">
                <hr>
                <h2 class="text-primary">Register</h2>
                <hr />
            </div>
            <div class="mb-3">
                <label asp-for="@Model.Username"></label>
                <input asp-for="@Model.Username" class="form-control" />
                <span asp-validation-for="@Model.Username" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.Password"></label>
                <input type="password" asp-for="@Model.Password" class="form-control" />
                <span asp-validation-for="@Model.Password" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary" style="width:150px">Register</button>
        </div>
    </form>
}

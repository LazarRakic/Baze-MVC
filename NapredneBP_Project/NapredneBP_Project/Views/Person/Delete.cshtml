@model Person
@{

    <form method="post" asp-action="DeletePerson">
        <input asp-for="Id" hidden />
        <div class="border p-3 mt-4">
            <div class="row pb-2">
                <hr>
                    <h2 class="text-primary">Edit Category</h2>
                <hr />
            </div>
            <div class="mb-3">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="BornYear"></label>
                <input asp-for="BornYear" class="form-control" />
                <span asp-validation-for="BornYear" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary" style="width:150px">Delete</button>
            <a asp-controller="Person" asp-action="GetAllPersons" class="btn btn-secondary" style="width:150px">
                Back to list
            </a>
        </div>
    </form>

}
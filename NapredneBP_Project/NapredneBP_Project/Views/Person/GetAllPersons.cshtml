@model IEnumerable<Person>
@{

    <table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Person Name
			</th>
            <th>
                Born year
			</th>
            <th>
                <a asp-controller="Person" asp-action="Connect"
                   class="btn btn-primary mx-2"> <i class="bi bi-pencil-square"></i> Relationship</a>
            </th>
		</tr>
	</thead>
    <tbody>
        @foreach(var obj in Model)
        {
            <tr>
                <td width="50%">
                    @obj.Name
				</td>
                <td width="30%">
                    @obj.BornYear
				</td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Person" asp-action="Update" asp-route-id="@obj.Id"
                           class="btn btn-primary mx-2"> <i class="bi bi-pencil-square"></i> Edit</a>
                        <a asp-controller="Person" asp-action="Delete" asp-route-id="@obj.Id"
                           class="btn btn-danger mx-2"> <i class="bi bi-trash-fill"></i> Delete</a>
                    </div>
				</td>
			</tr>
        }
    </tbody>

</table>

}
